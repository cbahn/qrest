{% extends "menu_layout.jinja2" %}

{% block content %}
<!-- Main Content -->
<main class="container">
  <section id="home">
    <h1 class="title-gradient">Locations</h1>

    {% if locations %}
    <table role="grid">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {% for loc in locations %}
        <tr>
          <td>
            <a href="{{ url_for('loc_info',loc_slug = loc.slug) }}">
              {{ loc.friendlyName }}
            </a>
          </td>
          <td>Discovered</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    {% else %}
    <p>This page doesn't work yet ðŸ˜ž.</p>
    {% endif %}
  </section>
</main>
{% endblock %}